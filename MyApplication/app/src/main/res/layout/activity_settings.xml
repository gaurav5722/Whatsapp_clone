<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/colorPrimary">
    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/baseline_arrow_back_24"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:tint="@color/white" />
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/ivArrow"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivProfile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/boyimagewithcircle"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            />
        <ImageView
            android:id="@+id/ivPlus"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:src="@drawable/plus_svgrepo_com"
            android:layout_marginTop="-30dp"
            android:layout_marginStart="10dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="username"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/etUserName"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter the UserName"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="About"
                android:textColor="@color/white"
                android:padding="5dp"
                android:textSize="16sp"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/etStatus"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Enter about"/>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:text="Save"
            android:background="@drawable/btn_bg"
            android:layout_gravity="right"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/linear_bg"
        android:layout_marginTop="10dp"
        android:padding="40dp"
        android:layout_alignParentBottom="true"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/lock_icon"
            android:drawablePadding="10dp"
            android:textSize="18sp"
            android:text="Profile"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textSize="18sp"
            android:padding="10dp"

            android:drawableLeft="@drawable/about_icon_svg"
            android:drawableTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:drawablePadding="10dp"
            android:textStyle="bold"
            android:text="About"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginLeft="50dp"

            android:drawableLeft="@drawable/plus_svgrepo_com"
            android:textSize="18sp"
            android:padding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Invite a Friend"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginLeft="50dp"
            android:padding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:drawableLeft="@drawable/help_svg"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Help"/>
    </LinearLayout>

</RelativeLayout>