<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    android:layout_marginStart="5dp"
    android:maxHeight="400dp"
    android:maxWidth="310dp"
    android:background="@drawable/bg_receiver"
    android:minHeight="30dp">
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/RvGuideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="16dp"/>
    <TextView
        android:id="@+id/tvRvMessage"
        android:textColor="@color/black"
        android:paddingEnd="5dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/RvGuideline"
        app:layout_constraintBottom_toTopOf="@+id/tvRvtime"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:maxWidth="270dp"
        android:minWidth="50dp"
        android:inputType="textImeMultiLine"
        android:text="message vvyfvfkfyufufyfffyufukufkuyfuffyufyfyfffkufyfufufkyfykkfffykfkfyfyk"/>

    <TextView
        android:id="@+id/tvRvtime"
        android:textColor="@color/chat_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:57"
        android:padding="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@+id/RvGuideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>